LIBRARY ieee;
USE ieee.std_logic_1164.ALL;

PACKAGE Lab1_pkg IS
  COMPONENT Lab1 IS 
    PORT (
      switch   : IN  std_logic;
      led      : OUT std_logic
      );
  END COMPONENT;
END PACKAGE Lab1_pkg;



