-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
-- |||| 
-- |||| COMPONENT DESCRIPTION 
-- |||| 
-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
------------------------------------------------------------------------------
LIBRARY ieee;
USE ieee.std_logic_1164.ALL;

ENTITY Lab1 IS
  PORT (
      switch   : IN  std_logic;
      led      : OUT  std_logic
    );
END ENTITY Lab1;

ARCHITECTURE behave OF Lab1 IS

BEGIN

    led <= '1' WHEN (switch = '1') ELSE '0';

END ARCHITECTURE behave;
